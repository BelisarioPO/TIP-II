
    <!-- Header -->
    <%- include('./partials/head.ejs') %>
    <% if (true) { %>
    <%- include('./partials/headerLogueado.ejs') %>
    <% } else {%>
    <%- include('./partials/headerNormal.ejs') %>
    <% } %>

    <!-- /Header -->

    <!-- product detail -->
    <div class="container products-wrapper">
        <div class="d-flex align-items-center">
            <h2 class="products-title"><%= product.productName %></h2>
            <p class="product-detail-description">
                <a href="/product/add">Editar</a>
            </p>
        </div>
        <div class="product-detail">
            <div class="row">
                <article class="col-12 col-lg-8 product-detail-info">
                    <img src="/<%= product.productImage %>" alt="" class="product-detail-img">
                    <p class="product-detail-description">
                    <%=product.productDes%>
                    </p>
                </article>
                <div class="col-12 col-lg-4">
                    <section class="comments">
                        <% for( let i = 0; i <comment.length; i++ ) { %>
                        <article>
                            <img src="/<%= comment[i].userImage %>" alt="">
                            <div class="data">
                                
                                <p class="user">
                                    <strong> <a href="/profile"><%= comment[i].userName %> </a> </strong>
                                    <%= comment[i].userComment %></p>
                                    
                            </div>
                        </article>
                        <% } %>
                    </section>
                    <form class="form" action="" method="POST">
                        <input class="form-input" type="text" value="" placeholder="Agregar comentario">
                        <button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
                    </form>
                    <hr>
                </div>
            </div>
        </div>
    </div>


    <%- include('./partials/footer') %>

